<!-- Audio control usando API do YouTube -->
<iframe id="yt-audio" style="display:none;" src="https://www.youtube.com/embed/Km8Okn1ylFM?enablejsapi=1&controls=0&autoplay=0&loop=1&playlist=Km8Okn1ylFM" allow="autoplay"></iframe>

<script>
function search() {
    // Tocar áudio via clique do usuário
    const iframe = document.getElementById('yt-audio');
    iframe.contentWindow.postMessage('{"event":"command","func":"playVideo","args":""}', '*');

    // Mostrar GUI de carregamento
    const loading = document.getElementById('loading');
    const results = document.getElementById('results');
    results.style.display = 'none';
    loading.style.display = 'flex';

    // Simular carregamento por 3 segundos
    setTimeout(() => {
        loading.style.display = 'none';
        results.style.display = 'block';
    }, 3000);
}
</script>

